CREATE TABLE IF NOT EXISTS questions (
  id TEXT PRIMARY KEY,
  roundId TEXT NOT NULL,
  prompt JSON NOT NULL,
  answer JSON NOT NULL,
  hints JSON,
  overrides JSON,
  createdAt DATETIME DEFAULT CURRENT_TIMESTAMP,
  FOREIGN KEY (roundId) REFERENCES rounds(id)
);
