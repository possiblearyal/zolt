-- Teams table: stores team metadata
-- Configuration is inherited from team_config when match starts
CREATE TABLE IF NOT EXISTS teams (
  id TEXT PRIMARY KEY,
  name TEXT NOT NULL,
  slug TEXT UNIQUE NOT NULL,
  -- URL-friendly identifier, e.g., "dhaulagiri"
  logoUrl TEXT,
  -- Team logo image URL
  displayOrder INTEGER DEFAULT 0,
  -- Order for display in TeamScores panel
  createdAt DATETIME DEFAULT CURRENT_TIMESTAMP,
  updatedAt DATETIME DEFAULT CURRENT_TIMESTAMP
);
CREATE INDEX IF NOT EXISTS idx_teams_slug ON teams(slug);
CREATE INDEX IF NOT EXISTS idx_teams_display_order ON teams(displayOrder);